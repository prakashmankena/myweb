currentBuild.displayName="HDFCIT1-#"+currentBuild.number
pipeline{
  agent any
  environment{
    PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
    }
  stages{
    stage("Wel-Come"){
      steps{
        echo "Welcome to Jenkins Declarative Git"
        }
      }
      
    stage("GIT-CLone"){
      steps{
        git credentialsId: 'Git-Hub', url: 'https://github.com/prakashmankena/myweb/'
      }
    }
    
    stage("Build-WAR"){
      steps{
        sh "mvn clean compile package"
        sh "mv target/*.war target/flex.war"
      }
    }
    
    stage("Deploy-Tomcat"){
      steps{
      sshagent(['ssh-login']) {
          sh 'scp -o StrictHostKeyChecking=no target/flex.war root@172.31.32.251:/opt/apache-tomcat-8.5.57/webapps'
        }
      }
    }
  }
}
